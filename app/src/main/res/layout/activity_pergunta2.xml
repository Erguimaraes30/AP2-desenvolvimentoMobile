<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_vertical"
    tools:context=".Pergunta2Activity">

    <TextView
        android:id="@+id/textViewNumeroPergunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pergunta 2 de 4"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewPergunta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quando confrontado com um desafio, você:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"/>

    <RadioGroup
        android:id="@+id/radioGroupPergunta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/radioButtonP2OpcaoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enfrenta de frente com coragem e determinação."
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/radioButtonP2OpcaoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analisa a situação cuidadosamente antes de agir."
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/radioButtonP2OpcaoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pede ajuda ou busca uma solução colaborativa."
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/radioButtonP2OpcaoD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tenta encontrar uma maneira criativa ou inesperada de resolver."
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnProximaPergunta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Próxima Pergunta"
        android:textSize="18sp"
        app:backgroundTint="#00796B"
        android:textColor="@android:color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

</LinearLayout>